<body>

<div class="container" id="auth-container">
  <!-- Aquí se insertará el formulario dinámicamente -->
</div>

<script>
  const container = document.getElementById('auth-container');

  let isLogin = true; // Estado para saber si es login o register

  function renderForm() {
    container.innerHTML = '';

    const title = document.createElement('h2');
    title.textContent = isLogin ? 'Iniciar Sesión' : 'Registrarse';

    const form = document.createElement('form');

    // Email
    const emailInput = document.createElement('input');
    emailInput.type = 'email';
    emailInput.placeholder = 'Correo electrónico';
    emailInput.required = true;

    // Contraseña
    const passwordInput = document.createElement('input');
    passwordInput.type = 'password';
    passwordInput.placeholder = 'Contraseña';
    passwordInput.required = true;

    form.appendChild(emailInput);
    form.appendChild(passwordInput);

    // Botón
    const submitBtn = document.createElement('button');
    submitBtn.type = 'submit';
    submitBtn.textContent = isLogin ? 'Entrar' : 'Registrarse';

    form.appendChild(submitBtn);

    // Evento del formulario
    form.onsubmit = function(e) {
      e.preventDefault();
      alert(`${isLogin ? 'Iniciaste sesión' : 'Te registraste'} con ${emailInput.value}`);
      // Aquí puedes agregar lógica para autenticar o registrar
    };

    // Toggle entre login y register
    const toggleText = document.createElement('div');
    toggleText.className = 'toggle';
    toggleText.textContent = isLogin ? '¿No tienes cuenta? Regístrate' : '¿Ya tienes cuenta? Inicia sesión';

    toggleText.onclick = () => {
      isLogin = !isLogin;
      renderForm();
    };

    container.appendChild(title);
    container.appendChild(form);
    container.appendChild(toggleText);
 